{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["./app/*"],
      "@components/*": ["./components/*"],
      "@protocol-silent-night/game-core": ["../../packages/game-core/src/index.ts"],
      "@protocol-silent-night/game-core/*": ["../../packages/game-core/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "../../packages/game-core/src/**/*"
  ]
}
