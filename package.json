{
  "name": "protocol-silent-night",
  "version": "1.0.0",
  "description": "Protocol: Silent Night - Arcade RPG Simulation with Three.js/WebGL",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:mcp": "PLAYWRIGHT_MCP=true playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:visual": "PLAYWRIGHT_MCP=true playwright test e2e/visual-regression.spec.ts e2e/component-snapshots.spec.ts",
    "test:e2e:update-snapshots": "PLAYWRIGHT_MCP=true playwright test --update-snapshots",
    "test:all": "pnpm test:unit && pnpm test:e2e"
  },
  "keywords": [
    "threejs",
    "webgl",
    "game",
    "react-three-fiber"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.26.0",
  "dependencies": {
    "@jbcom/strata": "^1.4.10",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.2",
    "@react-three/postprocessing": "^3.0.4",
    "@react-three/rapier": "^2.2.0",
    "postprocessing": "^6.38.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "three": "^0.182.0",
    "tone": "^15.1.22",
    "yuka": "^0.7.8",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@playwright/test": "^1.57.0",
    "@react-three/test-renderer": "^9.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.3",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.182.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "happy-dom": "^20.0.11",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "xvfb-maybe": "^0.2.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ]
  }
}
