{
  "name": "protocol-silent-night",
  "version": "1.0.0",
  "description": "Protocol: Silent Night - Arcade RPG Simulation with Three.js/WebGL",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:mcp": "PLAYWRIGHT_MCP=true playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "keywords": [
    "threejs",
    "webgl",
    "game",
    "react-three-fiber"
  ],
  "license": "MIT",
  "dependencies": {
    "@jbcom/strata": "^1.0.0",
    "@react-three/drei": "^9.120.0",
    "@react-three/fiber": "^8.17.0",
    "@react-three/postprocessing": "^2.16.0",
    "@react-three/rapier": "^1.5.0",
    "postprocessing": "^6.36.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "three": "^0.160.0",
    "yuka": "^0.7.8",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.160.0",
    "@vitejs/plugin-react": "^4.3.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0"
  }
}
